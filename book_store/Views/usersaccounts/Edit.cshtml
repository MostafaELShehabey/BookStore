@model book_store.Models.usersaccounts

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "~/Views/Shared/Edit_profile.cshtml";
}





<h2>Edit of personal information </h2>

<hr />
<style>
    .row {
        --bs-gutter-x: 1.5rem;
        --bs-gutter-y: 0;
        display: flex;
        margin-top: calc(var(--bs-gutter-y) * -1);
        margin-right: calc(var(--bs-gutter-x) * -.5);
        margin-left: calc(var(--bs-gutter-x) * -.5);
        flex-direction: row-reverse;
        justify-content: space-between;
       
    }
    </style>
<div class="row" style="text-align: end;">

    <img src="~/images/undraw_Profile_re_4a55.png" style="    height: 78%;
    width: auto;
    width: 58%;
}" />
 
    <div class="col-md-4">
        
        <form asp-action="Edit" style="text-align: start;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"><h4>Edit Username</h4></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pass" class="control-label"><h4>Edit Password</h4></label>
                <input asp-for="pass" class="form-control" />
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="role" />

            <div class="form-group">
                <label asp-for="email" class="control-label"><h4>Edit Email</h4></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group"><br></br>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
   
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
